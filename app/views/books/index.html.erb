<h1>Books</h1>

    <Table>
     <tr>
         <th>Title</th>
         <th>Body</th>
     </tr>
     <% @books.each do |list| %>
         <tr>
            <td><%=list.title %></td>
            <td><%=list.body %></td>
            <td><%=link_to"Show", book_path(list.id) %></td>
            <td><%=link_to"Edit", edit_book_path(list.id) %></td>
            <td><%=link_to"Destroy", book_path(list.id) %></td>
         </tr>
    <% end %>

    </Table>


<%= form_with model: @book, url: '/books', method: :post do |f| %>
    <h2>New book</h2>
    <p>Title</p>
    <div><%= f.text_field :title %></div>
    <p>Body</p>
    <div><%= f.text_area :body %></div>
    <div><%= f.submit 'Create Book'%></div>
<% end %>